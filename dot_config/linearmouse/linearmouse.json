{
	"$schema": "https://schema.linearmouse.app/0.9.5",
	"schemes": [
		{
			"if": {
				"device": {
					"category": "mouse"
				}
			},
			"scrolling": {
				"acceleration": 1,
				"reverse": true,
				"speed": 0,
				"distance": 3
			}
		},
		{
			"if": {
				"device": {
					"category": "mouse"
				},
				"app": "com.microsoft.VSCode"
			},
			"scrolling": {
				"distance": {
					"vertical": "36px"
				},
				"acceleration": {
					"vertical": 1
				},
				"speed": {
					"vertical": 0
				}
			}
		}
	]
}
