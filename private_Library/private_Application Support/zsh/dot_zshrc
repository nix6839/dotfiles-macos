# If this line is in `.zshenv`, commands of brew can't override
# default commands of macOS
export PATH="/opt/homebrew/bin:/opt/homebrew/sbin${PATH+:$PATH}"

export GPG_TTY="$TTY"
export NODE_EXTRA_CA_CERTS="$(mkcert -CAROOT)/rootCA.pem"

. "$ZDOTDIR/zplug.zsh"
. "$ZDOTDIR/p10k.zsh"
. "$ZDOTDIR/aliases.zsh"
. "$ZDOTDIR/pnpm.zsh"

. "$NVM_DIR/nvm.sh"

# Enable Powerlevel10k instant prompt. Should stay close to the top of ~/Library/Application\ Support/zsh/.zshrc.
# Initialization code that may require console input (password prompts, [y/n]
# confirmations, etc.) must go above this block; everything else may go below.
if [[ -r "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh" ]]; then
  source "${XDG_CACHE_HOME:-$HOME/.cache}/p10k-instant-prompt-${(%):-%n}.zsh"
fi

bindkey -e

update-all() {
  brew update
  brew upgrade
  mas upgrade

  zplug update
  tldr --update
  nvim +PlugUpgrade +PlugInstall +qall

  poetry self update

  rustup update
  cargo install-update -a

  corepack install -g pnpm@latest
  ncu --packageFile "$PNPM_HOME/global/5/package.json" -u
  pnpm i -g
  pnpm up -g
  ncu -g
}

rm-network-configs() {
  (
    cd /Library/Preferences/SystemConfiguration &&
      sudo rm -rf com.apple.airport.preferences.plist \
                  com.apple.wifi.message-tracer.plist \
                  NetworkInterfaces.plist \
                  preferences.plist \
                  com.apple.network.eapolclient.configuration.plist)
}
